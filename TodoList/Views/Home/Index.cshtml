@model TodoViewModel

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.TodoList)
                    {
                        <tr>
                            <th class="todos-column" scope="row">@t.Id</th>
                            <td class="todos-column">@t.Name</td>
                            <td class="buttons-column">
                                <button class="btn btn-sm btn-danger" onclick="deleteTodo('@t.Id')">Delete</button>
                                <button class="btn btn-sm btn-primary" onclick="populateForm('@t.Id')">Update</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function deleteTodo(id) {
        if (confirm('Are you sure you want to delete this todo?')) {
            $.post('/Home/Delete', { id: id }, function (data) {
         
                location.reload();
            });
        }
    }

    function populateForm(id) {
        $.get('/Home/PopulateForm', { id: id }, function (data) {

            $('#todoId').val(data.id);
            $('#todoName').val(data.name);
        });
    }
</script>

